<hexya>
    <data>

        <view id="product_view_product_price_list" model="ProductPriceListWizard">
            <form string="Price List">
                <group string="Calculate Product Price per Unit Based on Pricelist Version.">
                    <field name="price_list_id" widget="selection"/>
                    <field name="qty1"/>
                    <field name="qty2"/>
                    <field name="qty3"/>
                    <field name="qty4"/>
                    <field name="qty5"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </view>

        <action id="product_action_product_price_list" type="ir.actions.act_window" name="Price List"
                model="ProductPriceListWizard" src_model="product.product" view_mode="form" target="new"/>
    </data>
</hexya>
